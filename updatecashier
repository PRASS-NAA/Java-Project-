    ActionListener clear = new ActionListener(){
        public void actionPerformed(ActionEvent e){
            id.setText("");

            if (panel != null) {
                panel.removeAll();
                remove(panel);
                revalidate();
                repaint();
            }
        }
    };
}

    public class updatecashier {
        public static void main(String[] args) {

            new updatecashie();

        }

    }




