    ActionListener submit = new ActionListener() {
        public void actionPerformed(ActionEvent e) {
            if (id.getText().isEmpty()) {
                JOptionPane.showMessageDialog(null, "ENTER A VALID ID", "GETID", JOptionPane.ERROR_MESSAGE);
            } else {
                add(panel);
                panel.setBounds(512, 270, 500, 500);
                panel.setBackground(new Color(55, 55, 55,200));
                panel.setLayout(null);

                JLabel header = new JLabel("UPDATE CASHIER");
                panel.add(header);
                header.setFont(new Font("Ariel", Font.BOLD, 20));
                header.setBounds(165, 20, 1000, 50);
                header.setBackground(new Color(182, 223, 248));
                header.setForeground(new Color(0x80));
                header.setOpaque(true);
                JLabel head = new JLabel(".");
                panel.add(head);
                head.setFont(new Font("Ariel", Font.BOLD, 1));
                head.setBounds(0, 20, 1000, 50);
                head.setBackground(new Color(182, 223, 248));
                head.setOpaque(true);



                JLabel label1 = new JLabel("USERNAME");
                panel.add(label1);
                label1.setFont(new Font("Ariel", Font.BOLD, 20));
