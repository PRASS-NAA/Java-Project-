        lab1.setBackground(new Color(182, 223, 248));
        lab1.setFont(new Font("ariel",Font.BOLD,0));
        lab.setFont(new Font("ariel",Font.BOLD,20));


        lab1.setOpaque(true);


        JLabel idd = new JLabel("CASHIER ID:");
        idd.setForeground(new Color(182, 223, 248));
        idd.setFont(new Font("ariel",Font.BOLD,20));
        panel1.add(idd);
        idd.setBounds(30, 70, 150, 25);

        id = new JTextField();
        id.setBackground(new Color(182, 223, 248));
        id.setForeground(new Color(0,0,128));
        panel1.add(id);
        id.setBounds(175, 72, 220, 25);

        JButton search = new JButton("SEARCH");
        panel1.add(search);
        search.setBounds(125, 130, 85, 20);
        search.setBackground(new Color(182, 223, 248));
        search.addActionListener(submit);

        JButton refresh = new JButton("CLEAR");
        panel1.add(refresh);
        refresh.setBounds(300, 130, 85, 20);
        refresh.setBackground(new Color(182, 223, 248));
        refresh.addActionListener(clear);


