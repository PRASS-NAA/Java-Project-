                user_name.setBounds(200, 150, 200, 25);
                user_name.setFont(new Font("Ariel", Font.BOLD, 15));
                user_name.setForeground(Color.BLACK);
                user_name.setBackground(new Color(182, 223, 248));

                JLabel label4 = new JLabel("PASSWORD:");
                panel.add(label4);
                label4.setBounds(30, 200, 200, 25);
                label4.setFont(new Font("ariel", Font.BOLD, 20));
                label4.setForeground(new Color(182, 223, 248));

                JTextField pass_word = new JTextField();
                panel.add(pass_word);
                pass_word.setBounds(200, 200, 200, 25);
                pass_word.setFont(new Font("Ariel", Font.BOLD, 15));
                pass_word.setForeground(Color.BLACK);
                pass_word.setBackground(new Color(182, 223, 248));

                JLabel label5 = new JLabel("DATEOFBIRTH:");
                panel.add(label5);
                label5.setBounds(30, 250, 200, 25);
                label5.setFont(new Font("ariel", Font.BOLD, 20));
                label5.setForeground(new Color(182, 223, 248));

                JTextField dob = new JTextField();
                panel.add(dob);
                dob.setBounds(200, 250, 200, 25);
                dob.setFont(new Font("Ariel", Font.BOLD, 15));
                dob.setForeground(Color.BLACK);
